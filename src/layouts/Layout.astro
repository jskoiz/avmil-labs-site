---
import '../styles/global.css';

interface Props { title?: string; description?: string; }
const {
  title = 'AVMIL LABS — Digital Media & Software',
  description = 'Digital marketing, web development, and software development—built with a Hawaii-grounded, global mindset.'
} = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#030712" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
